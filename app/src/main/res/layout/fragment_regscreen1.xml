<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/frmeee">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="427dp"
            android:orientation="vertical"
            android:id="@+id/linlayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/reg_pg1"
                android:id="@+id/textView"
                android:gravity="center|left"
                android:textSize="40sp"
                android:textIsSelectable="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/reg_sub"
                android:id="@+id/textView5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/reg_username"
                android:id="@+id/text_username"
                android:layout_weight="0.08" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rellayout">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_username"

                    android:background="@android:color/darker_gray"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:indeterminate="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/new_username"
                    android:layout_toEndOf="@+id/new_username"

                    style="@android:style/Widget.ProgressBar" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/user_err"
                android:id="@+id/user_error_text"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:visibility="gone" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/justspace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/reg_password"
                android:id="@+id/textView3"
                android:layout_weight="0.08" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/new_password"
                android:textSize="20sp"
                android:background="@android:color/darker_gray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/reg_pass_verify"
                android:id="@+id/textView2"
                android:layout_weight="0.08" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/new_password_verify"
                android:textSize="20sp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_next"
        android:id="@+id/next"
        android:layout_gravity="right|bottom"
        />

</FrameLayout>